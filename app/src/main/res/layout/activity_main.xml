<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alvaro.basedatos.MainActivity">

    <EditText
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nombre"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="id"
        android:inputType="number" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="nombre"
        android:inputType="textPersonName"
        android:layout_below="@+id/id"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nombre"
        android:layout_alignRight="@+id/nombre"
        android:layout_below="@+id/nombre"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="apellido"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Buscar"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/btnActualizar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Insertar"
        android:layout_below="@+id/apellido"
        android:layout_toRightOf="@+id/btnBuscar"
        android:layout_toEndOf="@+id/btnBuscar" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnInsertar"
        android:layout_toEndOf="@+id/btnInsertar"
        android:layout_toRightOf="@+id/btnInsertar"
        android:onClick="onClick"
        android:text="Actualizar"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnBuscar"
        android:layout_alignBottom="@+id/btnBuscar"
        android:layout_toEndOf="@+id/btnActualizar"
        android:layout_toRightOf="@+id/btnActualizar"
        android:textAllCaps="false"
        android:text="Borrar" />
</RelativeLayout>
